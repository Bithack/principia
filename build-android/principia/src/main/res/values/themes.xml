<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="PrincipiaTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ScrollViewBody" parent="@android:style/Widget.ScrollView">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="RelativeLayoutBody">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="TinyDialog" parent="android:Theme.Holo.Dialog">
        <!-- Fill the screen -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>      
    </style>
    <style name="FullDialog" parent="android:Theme.Holo.Dialog">
        <!-- Fill the screen -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <!-- No titles or window float -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>      
    </style>
    <style name="WebDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CodeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
    </style>
    <style name="DialogNoAnimation">
	    <item name="android:windowEnterAnimation">@anim/enter</item>
	    <item name="android:windowExitAnimation">@anim/exit</item>
	</style>
    <style name="CodeText">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ButtonBar" parent="@android:style/ButtonBar">
	</style>
</resources>
